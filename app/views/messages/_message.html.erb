<% if message.user == current_user %>
  <div id="right">
    <div class="message-container" id="message-<%= message.id %>">
      <div id="chat-right">
        <i class="author">
            <span><%= message.user.first_name %></span>
            <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
        </i>
        <p><%= message.content %></p>
      </div>
    </div>
  </div>
<% else %>
  <div class="message-container" id="message-<%= message.id %>">
    <div id="chat-left">
      <i class="author">
          <span><%= message.user.first_name %></span>
          <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </i>
      <p><%= message.content %></p>
    </div>
  </div>
<% end %>

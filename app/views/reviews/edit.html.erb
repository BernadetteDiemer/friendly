<%= render 'shared/navbar' %>
<%= render 'shared/menubar' %>
<div class="container">
  <div class="form">
    <%= simple_form_for [ @event, @booking, @review ] do |f| %>
      <%= f.input :rating, input_html: { min: '0', max: '5' } %>
      <%= f.input :comment %>
      <%= f.submit "Save & Update", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= render 'shared/navbar' %>
<%= render 'shared/menubar' %>

<h1 style="text-align: center">Check our events</h1>

<div class="container justify-content-center mx-2">
  <ul>
    <% current_user.events.each do |event| %>
      <div class="card-product justify-content-center">
        <div class="card-product-infos">
          <p style="color: #8BB484; padding-bottom:10px;"><%= event.date.strftime("%A, %b %e %Y") %></p>
          <a href="<%= event_path(event) %>">
            <strong><%= event.title %></strong>
          </a>
          <div>
            <p><%= event.description %></p>
            <p><%= event.number_of_participants %> humans are joining us at <em><%= event.address %></em></p>
          </div>
        </div>
        <div class="event-picture-right" style="background-image: url('<%= asset_url "WavyLines4 (2).png" %>');"></div>
      </div>
    <% end %>
    <br><br><br>
  </ul>
</div>

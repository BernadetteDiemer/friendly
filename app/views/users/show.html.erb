
<%= render 'shared/menubar' %>
<%= render 'shared/navbar' %>

<% if @user == current_user %>
  <div class="container text-center justify-content-center">
    <h1>Hi, <%= current_user.first_name %>!</h1>
    <div class="justify-content-center">
      <% if @user.photo.attached? %>
        <div class="profile-avatar" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @user.photo.key,crop: :fill %>')"></div>
      <% else %>
        <div class="profile-avatar" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1519671282429-b44660ead0a7?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1770&q=80');"></div>
      <% end %>
    </div>
  </div>

  <div class="container">
    <p>About:</p>
    <%= simple_form_for current_user, url: profile_path do |f| %>
      <%= f.input :about %>
      <%= f.submit %>
    <% end %>
  </div>

  <div class="main m-5">
    <h2>All events</h2>
      <div class="overflow-auto mb-10 md:mb-20">
        <div class="d-flex flex-row sm:space-y-0">

          <div class="flex flex-col sm:w-1/3 items-center space-y-2 px-6 p1ym4qhs flex flex-col items-center space-y-2 px-6" data-testid="PromoGridItem">
            <h3 class="profile-card mt-3 md:mt-0 i9prqz1">Events you created
            </h3>
          </div>

          <div class="flex flex-col sm:w-1/3 items-center space-y-2 px-6 p1ym4qhs flex flex-col items-center space-y-2 px-6" data-testid="PromoGridItem" style="padding: 0px 10px;">
            <h3 class="profile-card mt-3 md:mt-0 i9prqz1">Events you will attend
            </h3>
          </div>

          <div class="flex flex-col sm:w-1/3 items-center space-y-2 px-6 p1ym4qhs flex flex-col items-center space-y-2 px-6" data-testid="PromoGridItem">
            <h3 class="profile-card mt-3 md:mt-0 i9prqz1">Past or cancelled events
            </h3>
          </div>

        </div>
      </div>
  </div>
<% else %>
  <% if @user.photo.attached? %>
    <div class="profile-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @user.photo.key,crop: :fill %>')">
      <h1><%= @user.first_name %>, <%= @age %></h1>
    </div>
  <% else %>
    <div class="profile-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1519671282429-b44660ead0a7?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1770&q=80');">
      <h1><%= @user.first_name %>, <%= @age %></h1>
    </div>
  </div>
  <% end %>

  <div class="container">
    <div class="about">
      <div class="about-top d-flex justify-content-between">
        <h3>About</h3>
        <p>attended 4 events</p>
      </div>
      <%= @user.about %>
    </div>
  </div>

  <div class="text-center">
    <button class="btn btn-default"> Invite <%= @user.first_name %> to your event.</button>
  </div>

  <div class="green-background">
    <div class="container">
      <h3><%= @user.first_name %>'s events</h3>
      <p>No events yet</p>
    </div>
  </div>
<% end %>

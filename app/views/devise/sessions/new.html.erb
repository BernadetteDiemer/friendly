<div class="container">
  <div class="row justify-content-center">
    <div class="col-8 col-sm-4">
      <nav class="friendly-toggle friendly-toggle--border friendly-toggle--large friendly-toggle--2-active text-uppercase text-center" style="margin-bottom: 24px;">
        <a class="friendly-toggle__item friendly-app font-weight-bold" href="<%= new_user_session_path %>">Log In</a>
        <a class="friendly-toggle__item friendly-app selected" href="<%= new_user_registration_path %>">Sign Up</a>
      </nav>
      <div class="form-login">
        <h2>My friendly</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

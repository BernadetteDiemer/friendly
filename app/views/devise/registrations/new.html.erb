<div class="container">
  <h2 class="header-title text-center">My friendly</h2>
  <div class="row justify-content-center">
    <div class="col-8 col-sm-4">
      <nav class="grid-container text-uppercase text-center">
        <div class="btn-container">
          <a class="friendly-toggle__item friendly-app" href="<%= new_user_session_path %>">Login</a>
          <div class="subheadline-login"></div>
        </div>
        <div class="btn-container <%="active" if current_page?(new_user_registration_path)%>">
          <a class="friendly-toggle__item friendly-app" href="<%= new_user_registration_path %>">Sign Up</a>
          <div class="subheadline-login"></div>
        </div>
      </nav>
      <div class="form-login">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
